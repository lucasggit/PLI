{% extends 'base.html.twig' %}

{% block title %}My-Ecoach{% endblock %}

{% block body %}
<style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
</style>
<div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4 font-weight-normal">Notes</h1>
    {% if app.user.Iscoach == true %}
        <p class="lead font-weight-normal">Rédigez des notes personnalisées pour vos clients</p>
    {% else %}
    <p class="lead font-weight-normal">Retrouvez les notes de vos coachs</p>
    {% endif %}
</div>
{% endblock %}