{% extends 'base.html.twig' %}

{% block title %}My-Ecoach{% endblock %}

{% block body %}
<style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
</style>
<div class="col-md-5 p-lg-5 mx-auto my-5">
  <h1 class="display-4 font-weight-normal">Les produits</h1>
  {% if app.user.Iscoach == true %}
  {{ form_start(form) }}
  <p class="lead font-weight-normal">Personnalisez vos produits</p>
</div>
<div class="row">
  <div class="col" style="background-color: gray; height: 300px;">
    {{ form_row(form.image, {
      'label': 'Image'
    }) }}
  </div>
  <div class="col-8" style="background-color: bisque;">
    {{ form_row(form.text, {
    'label': 'Description...'
    }) }}
    <button type="submit" class="btn btn-primary">Mettre à jour</button>
  </div>
</div>
{{ form_end(form) }}
{% for produit in produits %}
  <div class="row">
    <div class="col" style="background-color: gray; height: 300px;">
      {{ produit.image}}
    </div>
    <div class="col-8" style="background-color: bisque;">
      {{ produit.text}}
    </div>
  </div>
{% endfor %}
  

{% else %}
  <p class="lead font-weight-normal">Les articles proposés par ton coach </p>
</div>
{% for produit in Produits_client %}
  <div class="row">
    <div class="col" style="background-color: gray; height: 300px;">
      {{ produit.image}}
    </div>
    <div class="col-8" style="background-color: bisque;">
      {{ produit.text}}
    </div>
  </div>
{% endfor %}
{% endif %}
{% endblock %}